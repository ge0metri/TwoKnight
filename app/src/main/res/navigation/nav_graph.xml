<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFragment">



    <fragment
        android:id="@+id/GameFragment"
        android:name="com.example.twoknight.GameFragment"
        android:label="game fragment"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_GameFragment_to_MenuFragment"
            app:destination="@id/MenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.example.twoknight.MenuFragment"
        android:label="menu fragment"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_MenuFragment_to_GameFragment"
            app:destination="@id/GameFragment" />
        <action
            android:id="@+id/action_MenuFragment_to_TutorialFragment"
            app:destination="@id/TutorialFragment" />
    </fragment>

    <fragment
        android:id="@+id/TutorialFragment"
        android:name="com.example.twoknight.TutorialFragment"
        android:label="tutorial fragment"
        tools:layout="@layout/fragment_tutorial" >
        <action
            android:id="@+id/action_TutorialFragment_to_TutorialFragment2"
            app:destination="@id/TutorialFragment2" />
    </fragment>
    <fragment
        android:id="@+id/TutorialFragment2"
        android:name="com.example.twoknight.TutorialFragment2"
        android:label="tutorial fragment2"
        tools:layout="@layout/fragment_tutorial2" >
        <action
            android:id="@+id/action_TutorialFragment2_to_MenuFragment"
            app:destination="@id/MenuFragment" />
    </fragment>



