<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_end"
            android:orientation="vertical">


            <include
                android:id="@+id/shopItem1"
                layout="@layout/shop_item_layout" />

            <include
                android:id="@+id/shopItem2"
                layout="@layout/shop_item_layout" />
<!--
            <include
                android:id="@+id/shopItem3"
                layout="@layout/shop_item_layout" />

            <include
                android:id="@+id/shopItem4"
                layout="@layout/shop_item_layout" />
-->
            <include
                android:id="@+id/shopItem5"
                layout="@layout/shop_item_layout" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopItem6"
                layout="@layout/shop_item_layout"
                android:layout_marginBottom="100dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="30dp"
        android:backgroundTint="#361B75"
        android:text="Menu"
        ads:icon="?android:attr/listChoiceIndicatorSingle"
        ads:strokeColor="#250000"
        ads:strokeWidth="2dp" />

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="96$"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
