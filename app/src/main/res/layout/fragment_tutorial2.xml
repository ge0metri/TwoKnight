<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#9E9E9E">

    <!-- Tutorial Image -->
    <ImageView
        android:id="@+id/tutorialImageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_hero_scard"
        android:background="#424242"
        android:contentDescription="sad villain"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <!-- Tutorial Title -->
    <TextView
        android:id="@+id/tutorialTitleTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_title2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/tutorialImageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_x2"
        android:contentDescription="crit"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Tutorial Title -->
    <TextView
        android:id="@+id/tutorialTitleTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_description3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textAlignment="center"/>
    

    <!-- Next Button -->
    <Button
        android:id="@+id/tutorialMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button2"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>
