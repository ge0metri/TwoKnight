<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <!-- Play Button -->

        <ImageView
            android:id="@+id/menuImage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            ads:layout_constraintVertical_bias="1.0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_hero_smug"
            />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#361B75"
            android:onClick="startGame"
            android:text="Play"
            ads:icon="@android:drawable/ic_media_play"
            ads:strokeColor="#250000"
            ads:strokeWidth="2dp" />

        <!-- How to Play Button -->
        <Button
            android:id="@+id/btnHowToPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnPlay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="How to Play"
            android:backgroundTint="#361B75"
            ads:icon="@drawable/ic_crit"
            ads:strokeColor="#250000"
            ads:strokeWidth="2dp" />

        <!-- Shop Button -->
        <Button
            android:id="@+id/btnShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnHowToPlay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Shop"
            android:backgroundTint="#361B75"
            ads:icon="?android:attr/listChoiceIndicatorSingle"
            ads:strokeColor="#250000"
            ads:strokeWidth="2dp"/>

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96$"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Current level: 2"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>