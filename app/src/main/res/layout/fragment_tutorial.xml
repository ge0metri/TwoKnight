<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#9E9E9E">

    <!-- Tutorial Image -->
    <ImageView
        android:id="@+id/tutorialImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_hero_smug"
        android:background="#424242"
        android:contentDescription="villain"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <!-- Tutorial Title -->
    <TextView
        android:id="@+id/tutorialTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_title1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/tutorialImageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_shield"
        android:contentDescription="shield"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Tutorial Title -->
    <TextView
        android:id="@+id/tutorialTitleTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_description2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/nextTutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button1"
        android:layout_gravity="center"
        android:onClick="nextSlide"
        android:layout_marginTop="24dp"/>

</LinearLayout>
